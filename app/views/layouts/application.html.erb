<!DOCTYPE html>
<html>
  <head>
    <title>Grumblr</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <%= link_to image_tag("logo.png", width: 50), root_path %>
      <div class="dropdown">
        <button class="dropbtn">Navigation
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-content">
          <%= link_to 'Grumblr Home', root_path %>
          <%= link_to 'Grumblrs', users_path  %>
          <%= link_to 'Register', registration_path unless current_user %>
          <%= link_to 'Log In', login_path unless current_user %>
          <% if current_user %>
            <%= link_to 'Profile', user_path(current_user) %>
            <%= link_to 'Dashboard', user_dashboard_path %>
            <%= link_to 'Log Out', logout_path %>
          <% end %>
        </div>
      </div>
    </nav>
    <% flash.each do |name, msg| %>
      <div class= "<%=name%>-flash">
        <p><%= msg %></p>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
